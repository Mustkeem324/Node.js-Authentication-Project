
<section>
    <h2>Sign In</h2>
    <% if (message) { %>
        <p><%= message %></p>
    <% } %>
    <form action="/user/signin" method="post">
        <input type="email" name="email" placeholder="Email" required><br>
        <input type="password" name="password" placeholder="Password" required><br><br>
        <!-- <div class="g-recaptcha" data-sitekey="Add-site-key"></div> -->
        <br/>
        <button type="submit">Sign In</button>
    </form>
    <br>
    <!-- Sign-in Google Auth -->
    <a href="/auth/google"><i class="fab fa-google"></i> Sign In with Google</a> &nbsp&nbsp

    <a href="/user/forgot-password"><i class="fas fa-unlock"></i> Forgot Password?</a>
    <!-- Link to forgot password page -->
    <p>Don't have an account? <a href="/user/signup"><i class="fas fa-user-plus"></i> Sign up</a></p>

    

</section>

